{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "test",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--compilers",
        "ts:ts-node/register",
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/src/**/*.test.ts"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
